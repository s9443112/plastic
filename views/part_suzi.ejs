<html lang="en">
<%- include('templates/head',{title:'首頁'}) %>

    <body>
        <!--上方狀態欄位-->
        <%- include('templates/navbar') %>

            <div class="container-fluid">
                <div class="row">

                    <!--側邊選項欄-->
                    <%- include('templates/slidebar') %>

                        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">

                           
                            <% if(part==='1'){ %>

                            <div class="table-responsive">
                                <table class="table table-striped table-sm">
                                    <thead>
                                        <tr>
                                            <th>項次</th>
                                            <th></th>
                                            <th>零件名稱</th>
                                            <th>料號</th>
                                            <th>安全庫存</th>
                                            <th>庫存數量</th>
                                            <th>廠商</th>
                                            <th>單價</th>
                                            <th>幣別</th>
                                            <th>備註</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let x=0;x<data.length;x++){ %>
                                            <tr>
                                                    <td>
                                                        <%=data[x].suzi_own_id %>
                                                    </td>
                                                    <td>
                                                        <%=data[x].suzi_twice_id %>
                                                    </td>
                                                    <td>
                                                        <%=data[x].name %>
                                                    </td>
                                                    <td>
                                                        <%=data[x].name_No %>
                                                    </td>
                                                    <td>
                                                        <%=data[x].safe_amount %>
                                                    </td>
                                                    <td>
                                                        <%=data[x].amount %>
                                                    </td>
                                                    <td>
                                                        <%=data[x].company %>
                                                    </td>
                                                    <td>
                                                        <%=data[x].price %>
                                                    </td>
                                                    <td>
                                                        <%=data[x].currency %>
                                                    </td>
                                                    <td>
                                                        <%=data[x].note %>
                                                    </td>
                                                    
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                            </div>

                            <% }else if(part==='2'){ %>
                                <div class="table-responsive">
                                    <table class="table table-striped table-sm">
                                        <thead>
                                            <tr>
                                                <th>項次</th>
                                                <th>零件名稱</th>
                                                <th>料號</th>
                                                <th>領用數量</th>
                                                <th>領料日期</th>
                                                <th>領取人簽名</th>
                                                <th>備註</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(let x=0;x<data.length;x++){ %>
                                                <tr>
                                                        <td>
                                                            <%=data[x].id %>
                                                        </td>
                                                        <td>
                                                            <%=data[x].name %>
                                                        </td>
                                                        <td>
                                                            <%=data[x].name_No %>
                                                        </td>
                                                        <td>
                                                            <%=data[x].get_amount %>
                                                        </td>
                                                        <td>
                                                            <%=data[x].get_date %>
                                                        </td>
                                                        <td>
                                                            <%=data[x].get_sign_name %>
                                                        </td>
                                                        <td>
                                                            <%=data[x].note %>
                                                        </td>
                                                        
                                                </tr>
                                                <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            <% } %>
                        </main>
                </div>
            </div>

            <!-- Bootstrap core JavaScript
                        ================================================== -->
            <!-- Placed at the end of the document so the pages load faster -->
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
                crossorigin="anonymous"></script>
            <script>
                window.jQuery || document.write('<script src="/static/assets/js/vendor/jquery-slim.min.js"><\/script>')
            </script>
            <script src="/static/assets/js/vendor/popper.min.js"></script>
            <script src="/static/dist/js/bootstrap.min.js"></script>

            <!-- Icons -->
            <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
            <script>
                feather.replace()
            </script>

            <!-- Graphs -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
            <script>
                var ctx = document.getElementById("myChart");
                var myChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
                        datasets: [{
                            data: [15339, 21345, 18483, 24003, 23489, 24092, 12034],
                            lineTension: 0,
                            backgroundColor: 'transparent',
                            borderColor: '#007bff',
                            borderWidth: 4,
                            pointBackgroundColor: '#007bff'
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: false
                                }
                            }]
                        },
                        legend: {
                            display: false,
                        }
                    }
                });
            </script>
    </body>

</html>
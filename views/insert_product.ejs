<html lang="en">
<%- include('templates/head',{title:'首頁'}) %>

    <body>
        <!--上方狀態欄位-->
        <%- include('templates/navbar') %>

        <div class="container-fluid">
            <div class="row">

                <!--側邊選項欄-->
                <%- include('templates/slidebar') %>

                <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
                    
                    <h2>零件庫 資料輸入</h2>
                    <div class="table-responsive">
                        <form action="/api/insert_product" method="POST">
                            <div class="form-row">
                                <div class="col-md-6 mb-4">
                                    <label>零件名稱</label>
                                    <input type="text" class="form-control" name="components" placeholder="零件名稱">
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label>料號</label>
                                    <input type="text" class="form-control" name="part" placeholder="料號">
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label>安全庫存</label>
                                    <input type="number" class="form-control" name="safe_stock" placeholder="安全庫存">
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label>庫存數量</label>
                                    <input type="number" class="form-control" name="stock" placeholder="庫存數量">
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label>廠商</label>
                                    <input type="text" class="form-control" name="vendor" placeholder="廠商">
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label>單價</label>
                                    <input type="number" class="form-control" name="price" placeholder="單價">
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label class="my-1 mr-2" for="inlineFormCustomSelectPref">幣別</label>
                                    <select class="custom-select my-1 mr-sm-2" name="currency">
                                        <option selected>Choose...</option>
                                        <option value="1">台幣 (TWD)</option>
                                        <option value="2">美元 (USD)</option>
                                        <option value="3">日幣 (JPY)</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label>備註</label>
                                    <input type="text" class="form-control" name="note" placeholder="備註">
                                </div>
                                <div class="col-md-6 mb-4">
                                    <button type="submit" class="btn btn-primary my-1">送出</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </main>
            </div>
        </div>

        <!-- Bootstrap core JavaScript
                ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
        <script>
            window.jQuery || document.write('<script src="/static/assets/js/vendor/jquery-slim.min.js"><\/script>')
        </script>
        <script src="/static/assets/js/vendor/popper.min.js"></script>
        <script src="/static/dist/js/bootstrap.min.js"></script>

         <!-- Icons -->
        <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
        <script>
            feather.replace()
        </script>

        <!-- Graphs -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
        <script>
            var ctx = document.getElementById("myChart");
            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
                    datasets: [{
                        data: [15339, 21345, 18483, 24003, 23489, 24092, 12034],
                        lineTension: 0,
                        backgroundColor: 'transparent',
                        borderColor: '#007bff',
                        borderWidth: 4,
                        pointBackgroundColor: '#007bff'
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: false
                            }
                        }]
                    },
                    legend: {
                        display: false,
                    }
                }
            });
        </script>
    </body>

</html>